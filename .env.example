# Environment Variables - WhatsApp Clone
# Copy this file to .env and customize for your environment
# Docker Compose automatically reads .env file

#==============================================================================
# Docker Configuration
#==============================================================================
COMPOSE_PROJECT_NAME=whatsapp

#==============================================================================
# Database Credentials
#==============================================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whatsapp_db
POSTGRES_USER=whatsapp
POSTGRES_PASSWORD=whatsapp123

# MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=whatsapp_chat
MONGODB_USER=whatsapp
MONGODB_PASSWORD=whatsapp123

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=whatsapp123

#==============================================================================
# Message Queue
#==============================================================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=whatsapp
RABBITMQ_PASSWORD=whatsapp123

#==============================================================================
# Application Configuration
#==============================================================================

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_EXPIRATION=86400000

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

#==============================================================================
# Firebase Push Notifications (Optional)
#==============================================================================
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

#==============================================================================
# Monitoring
#==============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

#==============================================================================
# Logging
#==============================================================================
LOG_LEVEL=INFO
# Options: TRACE, DEBUG, INFO, WARN, ERROR

#==============================================================================
# Resource Limits
#==============================================================================
GATEWAY_MEMORY_MIN=256m
GATEWAY_MEMORY_MAX=512m

USER_SERVICE_MEMORY_MIN=256m
USER_SERVICE_MEMORY_MAX=512m

CHAT_SERVICE_MEMORY_MIN=512m
CHAT_SERVICE_MEMORY_MAX=1024m

NOTIFICATION_SERVICE_MEMORY_MIN=256m
NOTIFICATION_SERVICE_MEMORY_MAX=512m

MESSAGE_PROCESSOR_MEMORY_MIN=256m
MESSAGE_PROCESSOR_MEMORY_MAX=512m

SCHEDULED_JOBS_MEMORY_MIN=256m
SCHEDULED_JOBS_MEMORY_MAX=512m
